.agreement-popup {
  height: 86vh;
  width: 90%;
  border-radius: 10px;
  padding-bottom: 41px;

  .agreement-wrap {
    padding: 10px;
    width: 100%;
    height: 100%;
    overflow-y: scroll;
  }

  .agreement-text {
    font-size: 12px;
    line-height: 20px;
  }

  .agreement-confirm {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    font-size: 14px;
    color: #1989fa;
    border-top: 1px solid #eee;
    text-align: center;
    line-height: 40px;
  }
}